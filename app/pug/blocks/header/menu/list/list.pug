    '<a class="list__item-link" href="#">Single Room No Sidebar</a>',
    '<a class="list__item-link" href="#">Book Online</a>'],
    href: '#'},
    {text: 'blog',
    id:'btn-blog',
    link: ['<a class="list__item-link" href="#">Single Post No Sidebar</a>',
    '<a class="list__item-link" href="#">Single Post</a>'],
    href: '#'},
    {text: 'activities',
    href: '#'},
    {text: 'contacts us',
    href: '#'},
    {text: 'blocks',
    id:'btn-blocks',
    link: ['<a class="list__item-link" href="#">Blocks 01</a>',
    '<a class="list__item-link" href="#">Blocks 02</a>',
    '<a class="list__item-link" href="#">Blocks 03</a>'],
    href: '#'}]
  each item in menuList
    li.list__item
      a.list__link(href= item.href class= item.class)= item.text
      if item.id
        label.fas.fa-sort-down.list__icon(for= item.id)
        input.list__show(type="checkbox" id= item.id)
        ul.list__item-submenu
          each list in item.link
            li
              != list