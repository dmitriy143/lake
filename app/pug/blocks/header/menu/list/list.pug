    id:'btn-home',
    link: ['<a class="list__item-link" href="#">Home No Sidebar</a>'],
    class: 'list__item--active',
    href: 'blog.html'},
    {text: 'pages',
    id:'btn-pages',
    link: ['<a class="list__item-link" href="#">Testimonial</a>',
    '<a class="list__item-link" href="#">Gallery</a>',
    '<a class="list__item-link" href="#">Typography Page</a>',
    '<a class="list__item-link" href="#">Grid Page No Sidebar</a>',
    '<a class="list__item-link" href="#">Sidebar Left</a>',
    '<a class="list__item-link" href="#">Sidebar Right</a>',
    '<a class="list__item-link" href="#">No Sidebar</a>',
    '<a class="list__item-link" href="#">404 Page</a>'],
    href: '#'},
    {text: 'rooms',
    id:'btn-rooms',
    link: ['<a class="list__item-link" href="#">Standart</a>',
    '<a class="list__item-link" href="#">Grid</a>',
    '<a class="list__item-link" href="#">List</a>',
